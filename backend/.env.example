# Environment Variables for RAG Integration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# EMBEDDING SERVICE (Required for vector search)
# =============================================================================

# Cohere API Key - Required for generating embeddings
# Get yours at: https://dashboard.cohere.ai/api-keys
COHERE_API_KEY="your-cohere-api-key-here"
EMBED_MODEL="embed-english-v3.0"

# =============================================================================
# VECTOR DATABASE (Required for document storage)
# =============================================================================

# Qdrant Cloud URL and API Key
# Get yours at: https://cloud.qdrant.io/
QDRANT_URL="https://your-cluster.region.cloud.qdrant.io"
QDRANT_API_KEY="your-qdrant-api-key-here"
QDRANT_COLLECTION_NAME="rag_full_book"


# =============================================================================
# AI MODEL PROVIDERS (At least one required)
# =============================================================================

# OpenRouter API (Recommended - provides access to many models)
# Get yours at: https://openrouter.ai/keys
OPENROUTER_API_KEY="your-openrouter-api-key-here"
OPENROUTER_MODEL="mistralai/devstral-2512:free"

# Gemini API (Alternative)
# Get yours at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key-here"
GEMINI_MODEL="gemini-2.0-flash"

# =============================================================================
# DATABASE (Required for user authentication and profiles)
# =============================================================================

# PostgreSQL/Neon Serverless Database
# Get yours at: https://neon.tech/
DATABASE_URL="postgresql+asyncpg://username:password@your-db-host.region.neon.tech/dbname?ssl=require"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Secret keys for JWT signing (generate unique values!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="your-secret-key-here"
AUTH_SECRET="your-auth-secret-here"

# Authentication server URL (your deployed backend URL)
AUTH_URL="https://your-deployed-backend-url.hf.space"
AUTH_TRUST_HOST=true

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Debug mode (set to false in production!)
DEBUG=false

# Retrieval settings
MAX_QUERY_LENGTH=1000
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_RETRIES=3
CONFIDENCE_THRESHOLD=0.7

# Embedding settings
EMBEDDING_MODEL=embed-english-v3.0
EMBEDDING_DIMENSION=1024

# CORS - Add your frontend domains
ALLOWED_ORIGINS="https://physical-ai-humanoid-robotic-book-kmg2eqtlm.vercel.app,https://physical-ai-humanoid-robotic-book-ten.vercel.app,https://physical-ai-robotics.dev,http://localhost:3000,http://localhost:3001,http://localhost:8000,http://localhost:8080"
