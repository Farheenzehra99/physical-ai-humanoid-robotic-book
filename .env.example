# RAG Chatbot Environment Variables - Example

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
LOG_LEVEL=INFO

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=book_chunks

# Database Configuration (PostgreSQL/Neon)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
NEON_DATABASE_URL=postgresql://username:password@neon_host:5432/database_name

# Claude MCP Embedding Configuration
EMBEDDING_MODEL=claude-mcp-embedding
EMBEDDING_DIMENSION=1536

# Application Configuration
MAX_QUERY_LENGTH=1000
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_RETRIES=3
CONFIDENCE_THRESHOLD=0.7

# Security
SECRET_KEY=your-super-secret-and-secure-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000,http://localhost:8080