{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://physical-ai-humanoid.org/schemas/code-snippet.json",
  "title": "CodeSnippet",
  "description": "Schema for executable code examples in documentation",
  "type": "object",
  "required": [
    "id",
    "language",
    "title",
    "code",
    "executionContext",
    "purpose"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^snippet-[a-z0-9-]+$",
      "description": "Unique identifier"
    },
    "language": {
      "type": "string",
      "enum": ["python", "bash", "yaml", "json", "dockerfile", "cpp", "javascript"],
      "description": "Programming language"
    },
    "title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Filename or description"
    },
    "code": {
      "type": "string",
      "minLength": 1,
      "description": "Actual source code"
    },
    "showLineNumbers": {
      "type": "boolean",
      "default": true,
      "description": "Display line numbers in rendered output"
    },
    "highlightedLines": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 1
      },
      "uniqueItems": true,
      "description": "Line numbers to emphasize"
    },
    "executionContext": {
      "type": "string",
      "enum": ["standalone", "jupyter", "repl", "isaac-sim", "ros2", "docker"],
      "description": "Environment where code runs"
    },
    "expectedOutput": {
      "type": "string",
      "description": "Expected console output"
    },
    "testCommand": {
      "type": "string",
      "description": "Shell command to validate snippet"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Required packages or imports"
    },
    "purpose": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "What this code demonstrates"
    }
  },
  "additionalProperties": false
}
